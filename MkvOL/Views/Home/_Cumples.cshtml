@model IEnumerable<MkvOL.Data.Entities.CumplesEntity>


    <div class="container" style="background-color:white; width:100%">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title" style="text-align:center">CUMPLEAÑOS</h4>
            </div>
            <div class="panel-body">
                <table id="Cumples" class="table table-striped table-bordered" style="width:100%">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="height:80px">
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td style="text-align:right; vertical-align:middle">
                                    @Html.DisplayFor(model => item.Fecha)
                                </td>
                                @if (item.Hoy == 1)
                                {
                                    <td>
                                        <img src="~/images/pastel_de_cumple.png">
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>