@model IEnumerable<MkvOL.Data.Entities.StockEcommerceEntity>

@{
    ViewData["Title"] = "Stock Web Ecommerce";
}

<form id="codigo" asp-controller="StockEcommerce" method="post" class="form-control" role="form">
    <label>Codigo</label>
    <input type="text" id="codigo" name="codigo" width="276" />
    <button type="submit">Aceptar</button>
</form>

<p></p>
<link rel="stylesheet" href="~/DataTables/DataTables-1.10.22/css/jquery.dataTables.min.css" />


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Stocks Web Ecommerce</h4>
            </div>
            <div class="panel-body">
                <table id="stocks" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CoArticulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CoBarra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Outlet)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Precio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Historico)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CoArticulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CoBarra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Outlet)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Historico)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-3.3.1.js")" type="text/javascript"></script>
<link href="~/DataTables/DataTables-1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/FixedColumns-3.3.1/css/fixedColumns.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/Buttons-1.6.5/css//buttons.bootstrap4.min.css" rel="stylesheet" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/DataTables/DataTables-1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="~/DataTables/DataTables-1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.5/js/dataTables.buttons.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.5/js/buttons.bootstrap4.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.5/js/buttons.html5.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.5/js/buttons.print.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.5/js/buttons.colVis.js"></script>
    <script src="~/DataTables/JSZip-2.5.0/jszip.min.js"></script>
    <script src="~/DataTables/FixedColumns-3.3.1/js/dataTables.fixedColumns.min.js"></script>
    <script src="~/DataTables/Scroller-2.0.3/js/dataTables.scroller.min.js"></script>



    <script>
        $(document).ready(function () {
            var table = $('#stocks').DataTable({
                scrollX: true,
                fixedColumns: true,
                //lengthChange: false,
                buttons: ['copy', 'excel', 'colvis']
            });

            table.buttons().container()
                .appendTo('#stocks_wrapper .col-sm-6:eq(0)');
        });

    </script>

}