@model IEnumerable<MkvOL.Data.Entities.DespachosEntity>

@{
    ViewData["Title"] = "Consulta Pedido";
}

@*<link rel="stylesheet" href="~/DataTables/DataTables-1.10.20/css/jquery.dataTables.min.css" />*@
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Consulta Pedido</h3>
            </div>
            <div class="panel-body">
                <table id="Consulta" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NoPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Seguimiento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Empresa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaDespacho)
                            </th>
                        </tr>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ModoEnvio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Observaciones)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Seguimiento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empresa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaDespacho)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModoEnvio)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Observaciones)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to Select Order</a>
</div>

