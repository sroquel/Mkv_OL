@model IEnumerable<MkvOL.Data.Entities.StocksLocalesEntity>

@{
    ViewData["Title"] = "ListarStocks";
}

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedcolumns/3.3.2/css/fixedColumns.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css">

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Stocks</h3>
            </div>
            <div class="panel-body">
                <table id="stocks" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CoBarra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Minorista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Abasto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Solar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Poeste)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unicenter)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Caballito)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tom)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pacifico)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Soleil)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AltoP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Avellaneda)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Arcos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Dot)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Devoto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Palmas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NvoCentro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CbaShop)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Recoleta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rosario)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td { white-space: nowrap; }
                                div.dataTables_wrapper {
                                width: 800px;
                                margin: 0 auto; }>
                                @Html.DisplayFor(modelItem => item.CoBarra)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Minorista)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Abasto)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Solar)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Poeste)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Unicenter)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Caballito)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Tom)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Pacifico)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Soleil)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.AltoP)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Avellaneda)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Arcos)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Dot)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Devoto)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Palmas)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.NvoCentro)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.CbaShop)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Recoleta)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Rosario)
                            </td>
                        </tr>

                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success">Back to Select Code</a>
</div>


<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>

<script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.bootstrap4.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.print.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.6.5/js/buttons.colVis.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/fixedcolumns/3.3.2/js/dataTables.fixedColumns.min.js"></script>


    <script>
        $(document).ready(function () {
            var table = $('#stocks').DataTable({
                scrollX: true,
                fixedColumns: true,
                //lengthChange: false,
                buttons: ['copy', 'excel', 'colvis']
            });

            table.buttons().container()
                .appendTo('#stocks_wrapper .col-sm-6:eq(0)');
        });

    </script>

}