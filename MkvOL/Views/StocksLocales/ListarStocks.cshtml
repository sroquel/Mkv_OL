@model IEnumerable<MkvOL.Data.Entities.StocksLocalesEntity>

@{
    ViewData["Title"] = "ListarStocks";
}

<link rel="stylesheet" href="~/DataTables/DataTables-1.10.20/css/jquery.dataTables.min.css" />


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Stocks</h3>
            </div>
            <div class="panel-body">
                <table id="stocks" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CoBarra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Minorista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Abasto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Solar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Poeste)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.VCrespo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unicenter)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Caballito)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Micro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pacifico)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Soleil)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AltoP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Avellaneda)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SanJusto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Dot)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Devoto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Palmas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NvoCentro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CbaShop)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td { white-space: nowrap; }
                                    div.dataTables_wrapper {
                                    width: 800px;
                                    margin: 0 auto; }>
                                    @Html.DisplayFor(modelItem => item.CoBarra)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Minorista)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Abasto)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Solar)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Poeste)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.VCrespo)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Unicenter)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Caballito)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Micro)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Pacifico)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Soleil)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.AltoP)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Avellaneda)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.SanJusto)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Dot)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Devoto)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.Palmas)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.NvoCentro)
                                </td>
                                <td style="text-align:right">
                                    @Html.DisplayFor(modelItem => item.CbaShop)
                                </td>
                            </tr>

                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success">Back to Select Code</a>
</div>


<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-3.3.1.js")" type="text/javascript"></script>
<link href="~/DataTables/DataTables-1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/FixedColumns-3.3.0/css/fixedColumns.bootstrap4.min.css" rel="stylesheet" />
<link href="~/DataTables/Buttons-1.6.1/css//buttons.bootstrap4.min.css" rel="stylesheet" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/DataTables/DataTables-1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.1/js/buttons.bootstrap4.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.1/js/buttons.html5.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.1/js/buttons.print.min.js"></script>
    <script src="~/DataTables/Buttons-1.6.1/js/buttons.colVis.js"></script>
    <script src="~/DataTables/JSZip-2.5.0/jszip.min.js"></script>
    <script src="~/DataTables/FixedColumns-3.3.0/js/dataTables.fixedColumns.min.js"></script>
    <script src="~/DataTables/Scroller-2.0.1/js/dataTables.scroller.min.js"></script>



    <script>
        $(document).ready(function () {
            var table = $('#stocks').DataTable({
                scrollX: true,
                fixedColumns: true,
                //lengthChange: false,
                buttons: ['copy', 'excel', 'colvis']
            });

            table.buttons().container()
                .appendTo('#stocks_wrapper .col-sm-6:eq(0)');
        });

    </script>

}