@model IEnumerable<MkvOL.Data.Entities.InternosEntity>

@{
    ViewData["Title"] = "Index";
}

@*Con bootstrap 4*@
<link rel="stylesheet" href="~/DataTables/DataTables-1.10.20/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" media="screen"/>


<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Create New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel navbar-expand-md">
            <div class="panel-heading">
                <h3 class="panel-title">Internos</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NroInterno)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Celular)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NroInterno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Celular)
                            </td>
                            @if (User.Identity.Name == "MSI\\Sergio" | User.Identity.Name == "MARKOVA\\SBS-Admin" | User.Identity.Name == "MARKOVA\\Sergio.Roquel")
                            {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-warning"><i class="fas fa-pen"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-align-justify"></i></a>|
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/DataTables/DataTables-1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/fontawesome/js/all.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>

}