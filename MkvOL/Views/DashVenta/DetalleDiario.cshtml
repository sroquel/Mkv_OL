@model IEnumerable<MkvOL.Data.Entities.EstadisticaDiariaEntity>

@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css" />
@*<link rel="stylesheet" type="text/css" href="~/css/datatable.css" />*@


<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">@ViewData["Sucursal"] - @ViewData["MesTexto"] @ViewData["Año"]</h4>
            </div>
            <div class="panel-body">
                <table id="Diaria" class="display compact  table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Dia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Importe)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Articulos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tickets)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TkProm)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArtXTk)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dia)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Importe)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Articulos)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.Tickets)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.TkProm)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.ArtXTk)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#Diaria').DataTable(
                {
                    dom: 'Bfrtip',
                    buttons: [
                        'copyHtml5',
                        'excelHtml5',
                        'csvHtml5'
                    ],
                    "paging": false,
                    "searching": false,
                    "bInfo": false
                }
            );
        });
    </script>
}