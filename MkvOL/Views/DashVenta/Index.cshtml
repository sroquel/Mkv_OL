                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<p></p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Franquicias</h4>
            </div>
            <div class="panel-body">
                <table id="Fanquicias" class="display-compact  table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Sucursal)
                            </th>
                            <th style="text-align:right">
                                @Html.DisplayNameFor(model => model.Pronostico)
                            </th>
                            <th style="text-align:right">
